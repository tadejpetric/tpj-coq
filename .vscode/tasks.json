{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    // ocaml-env.exe exec : Pripravi okolje za OCaml na windowsih
    // ocaml.exe -init \"${file}\" : Zažene OCaml in vanj naloži odprto datoteko kot knjižnico
    // ocamlc.exe : Zažene OCaml compiler
        // -g : omogoči boljše izpisovanje napak
        // -I \"${workspaceFolder}\\domaca-naloga-01\\lambda\\" : 
              // pove kje compiler najde že zgrajene datoteke (saj se kasnejše
              // nanašajo na predhodnjo zgrajene datoteke)
        // -o lambda.exe : poimenuje končni program
        //  \"${workspaceFolder}\\...\\syntax.ml\" : 
              // compilerju zaporedoma podajamo datoteke. Zadnja (lambda.ml)
              // se zgradi v program (lambda.exe)
    // ocamlrun.exe : Požene datoteko zgrajeno z OCamlom
        // -b : omogoči izpis sledi napake
        // \"${workspaceFolder}\\lambda.exe\" :
            // zažene lambdo, in se pri tem zanaša, da je datoteka v najbolj
            // zunanji mapi (kamor jo compiler praviloma shrani pri uporabi taskov)
        // lazy / eager : izbere način zagona lambde
        // \"${file}\" : v lambdi požene trenutno odprto datoteko
    {
      "label": "OCaml",
      "type": "shell",
      "command":
       "C:\\OCaml64\\usr\\local\\bin\\ocaml-env.exe exec -- C:\\OCaml64\\home\\???\\.opam\\!!!\\bin\\ocaml.exe -init \"${file}\""
    },
    {
      "label": "Compile Lambda",
      "type": "shell",
      "command":
       "C:\\OCaml64\\usr\\local\\bin\\ocaml-env.exe exec -- C:\\OCaml64\\home\\???\\.opam\\!!!\\bin\\ocamlc.exe -g -I \"${workspaceFolder}\\domaca-naloga-01\\lambda\" -o lambda.exe \"${workspaceFolder}\\domaca-naloga-01\\lambda\\syntax.ml\" \"${workspaceFolder}\\domaca-naloga-01\\lambda\\parser.ml\" \"${workspaceFolder}\\domaca-naloga-01\\lambda\\eval.ml\" \"${workspaceFolder}\\domaca-naloga-01\\lambda\\lazyEval.ml\" \"${workspaceFolder}\\domaca-naloga-01\\lambda\\lambda.ml\"" 
    },
    {
      "label": "Lambda Eager",
      "type": "shell",
      "command":
       "C:\\OCaml64\\usr\\local\\bin\\ocaml-env.exe exec -- C:\\OCaml64\\home\\???\\.opam\\!!!\\bin\\ocamlrun.exe -b \"${workspaceFolder}\\lambda.exe\" eager \"${file}\"" 
    },
    {
      "label": "Lambda Lazy",
      "type": "shell",
      "command":
       "C:\\OCaml64\\usr\\local\\bin\\ocaml-env.exe exec -- C:\\OCaml64\\home\\???\\.opam\\!!!\\bin\\ocamlrun.exe -b \"${workspaceFolder}\\lambda.exe\" lazy \"${file}\"" 
    }
  ]